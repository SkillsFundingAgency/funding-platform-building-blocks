{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "virtualNetworkName": {
      "type": "string",
      "metadata": {
        "description": "The name of the virtual network to create the subnet in."
      }
    },
    "subnetName": {
      "type": "string",
      "metadata": {
        "description": "The name of the subnet."
      }
    },
    "subnetAddressPrefix": {
      "type": "string",
      "metadata": {
        "description": "The address prefix of the subnet."
      }
    },
    "serviceEndpointList": {
      "type": "array",
      "defaultValue": [],
      "metadata": {
        "description": "A list of service endpoints."
      }
    },
    "delegations": {
      "type": "array",
      "defaultValue": [],
      "metadata": {
        "description": "An array of delegations. Object referance can be found here: https://docs.microsoft.com/en-us/azure/templates/microsoft.network/2018-11-01/virtualnetworks/subnets#Delegation"
      }
    },
    "routeTable": {
      "type": "string",
      "metadata": {
        "description": "The ID of the route table to associate with the subnet."
      }
    },
    "networkSecurityGroup": {
      "type": "string",
      "metadata": {
        "description": "The ID of the network security group to associate with the subnet."
      }
    }
  },
  "resources": [
    {
      "name": "[concat(parameters('virtualNetworkName'), '/', parameters('subnetName'))]",
      "type": "Microsoft.Network/virtualNetworks/subnets",
      "apiVersion": "2018-11-01",
      "properties": {
        "addressPrefix": "[parameters('subnetAddressPrefix')]",
        "serviceEndpoints": "[if(greater(length(parameters('serviceEndpointList')), 0), parameters('serviceEndpointList'), json('[]'))]",
        "delegations": "[parameters('delegations')]",
        "routeTable": {
          "id": "[resourceId('Microsoft.Network/routeTables', parameters('routeTable'))]"
        },
        "networkSecurityGroup": {
          "id": "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('networkSecurityGroup'))]"
        }
      }
    }
  ],
  "outputs": {
  }
}
