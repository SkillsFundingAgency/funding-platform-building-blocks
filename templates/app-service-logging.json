{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "appServiceResourceName": {
      "type": "string"
    },
    "appServiceLogRetentionDays": {
      "type": "string",
      "defaultValue": "30"
    },
    "appServiceLogRetentionMb": {
      "type": "string",
      "defaultValue": "30"
    }
  },
  "variables": {
  },
  "resources": [
    {
      "apiVersion": "2016-08-01",
      "name": "[concat(parameters('appServiceResourceName'), '/logs')]",
      "type": "Microsoft.Web/Sites/config",
      "dependsOn": [
      ],
      "properties": {
        "applicationLogs": {
          "fileSystem": {
            "level": "Off"
          },
          "azureTableStorage": {
            "level": "Off",
            "sasUrl": null
          },
          "azureBlobStorage": {
            "level": "verbose",
            "retentionInDays": "[parameters('appServiceLogRetentionDays')]"
          }
        },
        "httpLogs": {
          "fileSystem": {
            "retentionInMb": "[parameters('appServiceLogRetentionMb')]",
            "retentionInDays": "[parameters('appServiceLogRetentionDays')]",
            "enabled": true
          }
        },
        "failedRequestsTracing": {
          "enabled": true
        },
        "detailedErrorMessages": {
          "enabled": true
        }
      }
    }
  ],
  "outputs": {

  }
}